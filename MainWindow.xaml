<Window x:Class="Note.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Note"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnOpen" Content="開啟檔案" HorizontalAlignment="Left" Height="37" Margin="19,22,0,0" VerticalAlignment="Top" Width="89" FontSize="16" Click="btnOpen_Click"/>
        <RichTextBox x:Name="rtbText" HorizontalAlignment="Center" Height="346" Margin="0,79,0,0" VerticalAlignment="Top" Width="780">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnSave" Content="存檔" HorizontalAlignment="Left" Height="37" Margin="121,22,0,0" VerticalAlignment="Top" Width="89" FontSize="16" Click="btnSave_Click"/>

    </Grid>
</Window>
